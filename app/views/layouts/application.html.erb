<!DOCTYPE html>
<html>
  <head>
    <title>Agora</title>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" />
    <link href="//cdnjs.cloudflare.com/ajax/libs/animate.css/3.1.1/animate.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="//code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" />
    <link rel="stylesheet" href="css/styles.css" />
  </head>
  <body>
    <nav id="topNav" class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
                <ul class="nav navbar-nav navbar-right">
                  <% if user_signed_in? %>
                    <li><%= link_to "My Portfolio", user_lists_path(current_user) %></li>
                    <%end%>
                    <li>
                      <% if user_signed_in? %>
                         <%= link_to "Log Out", destroy_user_session_path(current_user) %>
                        <% else %>
                          <a class="page-scroll" data-toggle="modal" href="#aboutModal">Sign Up</a>
                        <% end %>
                    </li>
                    <%  if !user_signed_in? %>
                      <li><a class="page-scroll" data-toggle="modal" href="#aboutModal2">Sign In</a></li>
                    <% end %>
                </ul>
            </div>
        </div>
    </nav>
    <br>
    <br>
    <br>
    <%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
    <%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
    <%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>
    <%= content_tag(:div, flash[:message], :id => "flash_alert") if flash[:message] %>
    <%= yield %>
  </body>
</html>
